{
    "compilerOptions": {
        "target": "es2020",
        "strictPropertyInitialization": false,
        "sourceMap": true,
        "outDir": "dist",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}
